<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.julive.adapter_demo">

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".video.VideoListActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:screenOrientation="fullSensor" />
        <activity android:name=".filter.FilterActivity" />
        <activity android:name=".empty.EmptyActivity" />
        <activity android:name=".expandable.ExpandableActivity" />
        <activity android:name=".selectable.SelectableActivity" />
        <activity android:name=".binding.DataBindingActivity" />
        <activity android:name=".diff.DiffActivity" />
        <activity android:name=".paging.Paging3Activity" />
        <activity android:name=".dsl.AdapterDslActivity" />
        <activity android:name=".sorted.SortedActivity" />
        <activity android:name=".core.ArrayListActivity" />
        <activity
            android:name=".main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>